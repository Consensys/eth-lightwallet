{
  "name": "eth-lightwallet",
  "version": "2.4.1",
  "description": "A lightweight ethereum javascript wallet.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ConsenSys/eth-lightwallet.git"
  },
  "scripts": {
    "build-js": "browserify index.js --s lightwallet | derequire | uglifyjs -c > dist/lightwallet.min.js",
    "build-dev": "browserify index.js --s lightwallet | derequire > dist/lightwallet.js",
    "test": "./node_modules/.bin/mocha --reporter spec --recursive",
    "autotest": "./node_modules/.bin/supervisor -q -n exit -x ./node_modules/.bin/mocha -- --reporter spec --recursive",
    "coverage": "istanbul cover _mocha -- -R spec; open coverage/lcov-report/index.html"
  },
  "keywords": [
    "ethereum",
    "blockchain",
    "transactions",
    "contracts",
    "wallet"
  ],
